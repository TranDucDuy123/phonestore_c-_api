@model DoAn2VADT.Database.Entities.Contact
@{
    ViewData["Title"] = "Chỉnh sửa liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h5>Chỉnh sửa liên hệ</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Edit" asp-route-id="@Model.Id">
            <div class="form-group">
                <label for="Name">Họ tên</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" />
            </div>
            <div class="form-group">
                <label for="Phone">Số điện thoại</label>
                <input type="text" class="form-control" id="Phone" asp-for="Phone" />
            </div>
            <div class="form-group">
                <label for="Topic">Chủ đề</label>
                <input type="text" class="form-control" id="Topic" asp-for="Topic" />
            </div>
            <div class="form-group">
                <label for="Message">Nội dung</label>
                <textarea class="form-control" id="Message" asp-for="Message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a class="btn btn-secondary" asp-action="Index">Hủy</a>
        </form>
    </div>
</div>
