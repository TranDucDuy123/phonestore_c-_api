@model DoAn2VADT.Database.Entities.Notification

@{
    ViewData["Title"] = "Thêm thông báo";
    Layout = "~/Areas/Admin/Views/Shared/_GlobalLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Dashboard" asp-action="Index" class="breadcrumb-item">
                <i class="fa-solid fa-house mr-1"></i>Trang chủ
            </a>
            <a asp-controller="Notification" asp-action="Index" class="breadcrumb-item">Danh sách thông báo</a>
            <span class="breadcrumb-item active">Thêm thông báo</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="UserId">Người dùng</label>
                <select name="UserId" class="form-control" asp-items="ViewBag.Users"></select>
            </div>
            <div class="form-group">
                <label for="OrderId">Đơn hàng</label>
                <select name="OrderId" class="form-control" asp-items="ViewBag.Orders"></select>
            </div>
            <div class="form-group">
                <label for="Type">Loại thông báo</label>
                <select name="Type" class="form-control" asp-items="ViewBag.NotificationTypes"></select>
            </div>
            <div class="form-group">
                <label for="Message">Nội dung</label>
                <textarea name="Message" class="form-control" rows="4"></textarea>
            </div>
            <div class="form-group">
                <label for="Status">Trạng thái</label>
                <input name="Status" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</div>
